# -*- coding: utf-8 mode: shell-script -*-
# $Id$

Test       : density+current
Program    : octopus
TestGroups : long-run, optimal_control
Enabled    : Yes

# calculate GS and first excited state of 1D 
# asymmetric quantum well
Input: 09-density+current.01-ground_state.inp

match ; Total energy ; GREPFIELD(static/info, 'Total       =', 3) ; -0.62061608; 0.0001
match ; Eigenvalue   ; GREPFIELD(static/info, '1   --', 3) ; -0.620616; 0.0001
match ; Eigenvalue   ; GREPFIELD(static/info, '2   --', 3) ; -0.463839; 0.0001


# optimize overlap of density and minimize
# the current of final state. Uses ZR98.
Input: 09-density+current.02-oct.inp



match ; J1 1st iteration  ; GREPFIELD(opt-control/convergence, ' 1  ', 3) ; -1.10646288; 1e-06
match ; J2 1st iteration  ; GREPFIELD(opt-control/convergence, ' 1  ', 4) ; -0.22634836; 1e-06


# optimize overlap of density and minimize
# the current of final state during certain 
# time before final time. Uses CG.
Processors: 1
# does not converge in parallel

Input: 09-density+current.03-tdoct.inp


match ; J1 1st iteration ; GREPFIELD(opt-control/convergence, '##        1 ', 4) ; -1.44008466; 1e-06
match ; J2 1st iteration ; GREPFIELD(opt-control/convergence, '##        1 ', 5) ; -0.06419693; 1e-06
