# -*- coding: utf-8 mode: shell-script -*-
# $Id$

Test       : Sodium static polarizability
Program    : octopus
TestGroups : long-run, linear_response
Enabled    : Yes


Input: 05-polarizability.01-gs.inp
match ; Total energy   ; GREPFIELD(static/info, 'Total       =', 3) ; -11.40181959; 0.0001
# due to the perversity of Methfessel-Paxton, occupations can be outside [0,2] and entropy can be negative
match ; Free energy    ; GREPFIELD(static/info, 'Free        =', 3) ; -11.32459745; 0.0001
match ; Eigenvalue     ; GREPFIELD(static/info, '1   --', 3) ;         -3.178010; 0.0001
match ; Occupation     ; GREPFIELD(static/info, '1   --', 4) ;          2.032770; 0.0001
match ; Eigenvalue     ; GREPFIELD(static/info, '2   --', 3) ;         -1.836990; 0.0001
match ; Occupation     ; GREPFIELD(static/info, '2   --', 4) ;         -0.032753; 0.0001
match ; Fermi energy   ; GREPFIELD(static/info, 'Fermi energy =', 4) ; -2.712578; 0.0001

Input: 05-polarizability.02-sternheimer.inp
match ; Polarizability xx ; LINEFIELD(em_resp/freq_0.0000/alpha, 2, 1) ; 48.679653; 0.0015
match ; Polarizability yy ; LINEFIELD(em_resp/freq_0.0000/alpha, 3, 2) ; 27.012378; 0.0015
match ; Polarizability zz ; LINEFIELD(em_resp/freq_0.0000/alpha, 4, 3) ; 27.012378; 0.0015

Input: 05-polarizability.03-finite-diff.inp
match ; Polarizability xx ; LINEFIELD(em_resp_fd/alpha, 2, 1) ; 48.680309; 0.0015
match ; Polarizability yy ; LINEFIELD(em_resp_fd/alpha, 3, 2) ; 27.013124; 0.0015
match ; Polarizability zz ; LINEFIELD(em_resp_fd/alpha, 4, 3) ; 27.013167; 0.0015

match ; Born charge xx ; LINEFIELD(em_resp_fd/Born_charges, 3, 1) ; 0.002265; 0.0015
match ; Born charge yy ; LINEFIELD(em_resp_fd/Born_charges, 4, 2) ; 0.004822; 0.0015
match ; Born charge zz ; LINEFIELD(em_resp_fd/Born_charges, 5, 3) ; 0.004821; 0.0015
# the Born charges should all be zero by symmetry, if the calculation were converged
match ; Born charge diff; GREPFIELD(em_resp_fd/Born_charges, "Discrepancy", 3,  4) ; 0.003978; 0.0015

# These values should all be zero by symmetry.
match ; beta xxx ; GREPFIELD(em_resp_fd/beta, "beta xxx", 3); 0.0; 0.7
match ; beta zxy ; GREPFIELD(em_resp_fd/beta, "beta zxy", 3); 0.0; 0.35
