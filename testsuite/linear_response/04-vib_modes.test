# -*- coding: utf-8 mode: shell-script -*-
# $Id$

Test       : LiH vibrational frequency
Program    : octopus
TestGroups : short-run, linear_response
Enabled    : Yes

Processors : 4

Input: 04-vib_modes.01-ground_state.inp
match ; Total Energy   ; GREPFIELD(static/info, 'Total       =', 3) ; -0.76459856; 0.0001
match ; Eigenvalues    ; GREPFIELD(static/info, '1   --', 3) ;        -0.141240; 0.0001
match ; Dipole Moment  ; GREPFIELD(static/info, '<z>', 3) ;            2.24560; 0.00011

Input: 04-vib_modes.02-vib_modes.inp
match ; Vibrational Frequency   ; LINEFIELD(vib_modes/normal_frequencies_lr, 1, 2) ;  1420.92427139; 1.5e-05
match ; Infrared Intensity      ; LINEFIELD(vib_modes/infrared, 2, 5) ;                  0.30478642; 1e-05
match ; Dynamical Matrix Entry  ; LINEFIELD(vib_modes/dynamical_matrix_lr, 2, 5)  ;     -0.180425859034E-01; 1.5e-08

Input: 04-vib_modes.022-vib_modes_restart.inp
match ; Vibrational Frequency   ; LINEFIELD(vib_modes/normal_frequencies_lr, 1, 2) ; 1420.92427139; 1.5e-05
match ; Infrared Intensity      ; LINEFIELD(vib_modes/infrared, 2, 5) ;                 0.30478642; 1e-05
match ; Dynamical Matrix Entry  ; LINEFIELD(vib_modes/dynamical_matrix_lr, 2, 5)  ;    -0.180425859034E-01; 1.5e-08
