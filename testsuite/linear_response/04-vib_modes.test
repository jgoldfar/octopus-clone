# -*- coding: utf-8 mode: shell-script -*-
# $Id$

Test       : LiH vibrational frequency
Program    : octopus
TestGroups : long-run, linear_response
Enabled    : Yes

Processors : 4

Input: 04-vib_modes.01-ground_state.inp
match ; Total Energy   ; GREPFIELD(static/info, 'Total       =', 3) ; -0.76459868
match ; Eigenvalues    ; GREPFIELD(static/info, '1   --', 3) ; -0.141240
Precision : 0.00011
match ; Dipole Moment  ; GREPFIELD(static/info, '<z>', 3) ; 2.24560

Input: 04-vib_modes.02-vib_modes.inp
Precision : 1.5e-5
match ; Vibrational Frequency   ; LINEFIELD(vib_modes/normal_frequencies_lr, 1, 2) ; 1420.92491
Precision : 1e-5
match ; Infrared Intensity      ; LINEFIELD(vib_modes/infrared, 2, 5) ; 0.30478623
Precision : 1.5e-8
match ; Dynamical Matrix Entry  ; LINEFIELD(vib_modes/dynamical_matrix_lr, 2, 5)  ; -0.0180422361169

Input: 04-vib_modes.022-vib_modes_restart.inp
Precision : 1.5e-5
match ; Vibrational Frequency   ; LINEFIELD(vib_modes/normal_frequencies_lr, 1, 2) ; 1420.92491
Precision : 1e-5
match ; Infrared Intensity      ; LINEFIELD(vib_modes/infrared, 2, 5) ; 0.30478623
Precision : 1.5e-8
match ; Dynamical Matrix Entry  ; LINEFIELD(vib_modes/dynamical_matrix_lr, 2, 5)  ; -0.0180422361169

Input: 04-vib_modes.03-vib_modes_fd.inp
Precision : 0.003
match ; Vibrational Frequency   ; LINEFIELD(vib_modes/normal_frequencies_fd, 1, 2) ; 1421.733195 
Precision : 1e-6
match ; Dynamical Matrix Entry  ; LINEFIELD(vib_modes/dynamical_matrix_fd, 2, 5)  ; -0.0182039000224
