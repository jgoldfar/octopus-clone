# -*- coding: utf-8 mode: shell-script -*-
# $Id$

Test       : Propagators (requiring SPARSKIT)
Options    : sparskit
Program    : octopus
TestGroups : short-run, real_time
Enabled    : Yes

#This test checks the time propagation, for various propagators

# ground state
Processors : 1
Input      : 02-propagators.01-gs.inp
match ; Initial energy ; GREPFIELD(static/info, 'Total       =', 3) ; -11.003530715; 1e-06

Processors : 4
Input      : 02-propagators.02-cnsparskit.inp
match ; Forces [step  1] ; LINEFIELD(td.general/coordinates, -21, 15) ; 0.17008915222385; 1e-06
match ; Forces [step 20] ; LINEFIELD(td.general/coordinates, -1, 15) ;  0.1458998393478; 1e-06

Processors : 4
Input      : 02-propagators.03-rungekutta2.inp
match ; Forces [step  1] ; LINEFIELD(td.general/coordinates, -21, 15) ; 0.17008915222385; 1e-06
match ; Forces [step 20] ; LINEFIELD(td.general/coordinates, -1, 15) ;  0.1459098720553; 1e-06

Processors : 4
Input      : 02-propagators.04-rungekutta4.inp
match ; Forces [step  1] ; LINEFIELD(td.general/coordinates, -21, 15) ; 0.17008915222385 ; 1e-06
match ; Forces [step 20] ; LINEFIELD(td.general/coordinates, -1, 15) ;  0.14591124458305; 1e-06

