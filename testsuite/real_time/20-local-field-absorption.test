# -*- coding: utf-8 mode: shell-script -*-

Test       : Absorption spectrum
Program    : octopus
TestGroups : short-run, real_time
Enabled    : Yes

Processors : 1
Input      : 20-local-field-absorption.01-gs.inp
Precision: 0.0001
match ; eigenvalue [1]                ;  GREPFIELD(static/info, '1   --', 3)            ;  -6.340082
match ; electrons-solvent int. energy ;  GREPFIELD(static/info, 'E_e-solvent =', 3)     ;   0.00003115
match ; nuclei-solvent int. energy    ;  GREPFIELD(static/info, 'E_n-solvent =', 3)     ;  -0.00003120
match ; molecule-solvent int. energy  ;  GREPFIELD(static/info, 'E_M-solvent =', 3)     ;  -0.00000005
match ; electronic pol. charge        ;  GREPFIELD(pcm/pcm_info.out, '       8   ', 7)  ;  -0.98711707
match ; nuclear pol. charge           ;  GREPFIELD(pcm/pcm_info.out, '       8   ', 9)  ;   0.98713876

Processors : 4
Input      : 20-local-field-absorption.02-td_prop_eom.inp
Precision: 0.0001
match ; M-solvent int. energy @ t=0        ;  GREPFIELD(td.general/energy,'       0', 12)   ; -4.691771297979e-08
match ; M-solvent int. energy @ t=1000*dt  ;  GREPFIELD(td.general/energy,'    1000', 12)   ; -6.003241376706e-07

Util       : oct-propagation_spectrum

Processors : 1
Input      : 20-local-field-absorption.02-td_prop_eom.inp

Precision: 0.0001
match ; 1st absorption peak (~7eV) - energy    ;  LINE(cross_section_vector, 760, 1)    ; 0.73500000E+01
match ; 1st absorption peak (~7eV) - strength  ;  LINE(cross_section_vector, 760, 86)   ; 0.16919151E+00
match ; 2nd absorption peak (~10eV) - energy   ;  LINE(cross_section_vector, 1110, 1)   ; 0.10850000E+02
match ; 2nd absorption peak (~10eV) - strength ;  LINE(cross_section_vector, 1110, 86)  ; 0.14647736E+00
match ; 3rd absorption peak (~16eV) - energy   ;  LINE(cross_section_vector, 1658, 1)   ; 0.16330000E+02
match ; 3rd absorption peak (~16eV) - strength ;  LINE(cross_section_vector, 1658, 86)  ; 0.85620264E-01
