Test       : Geometry optimization
Program    : octopus
TestGroups : long-run, finite_systems_3d
Enabled    : Yes

Input      : 23-go-na2.01-steep.inp
match ; Total energy ; GREPFIELD(static/info, 'Total       =', 3) ; -0.41784564; 0.0001
match ; Force    [1] ; GREPFIELD(static/info, 'Forces on the ions', 5, 2) ; -0.000732; 0.0001
match ; Force    [2] ; GREPFIELD(static/info, 'Forces on the ions', 5, 3) ; 0.000732; 0.0001
match ; Geometry [1] ; LINEFIELD(min.xyz, 3, 4) ; -1.449084; 0.0001
match ; Geometry [2] ; LINEFIELD(min.xyz, 4, 4) ; 1.449083; 0.0001

# the results differ because we stop simplex before it converges
Input      : 23-go-na2.02-simplex.inp
match ; Total energy ; GREPFIELD(static/info, 'Total       =', 3) ; -0.41754016; 0.0001
