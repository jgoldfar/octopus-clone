match ; Force    [2] ; GREPFIELD(static/info, 'Forces on the ions', 5, 3) ; -0.002584; 0.0001
match ; Geometry [1] ; LINEFIELD(min.xyz, 3, 4) ; -1.526284; 0.0001
match ; Geometry [2] ; LINEFIELD(min.xyz, 4, 4) ; 1.384190; 0.0001

