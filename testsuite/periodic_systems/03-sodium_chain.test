# -*- coding: utf-8 mode: shell-script -*-
# $Id$

Test       : Sodium chain
Program    : octopus
TestGroups : long-run, periodic_systems
Enabled    : Yes

# this test is based on CA Rozzi et al., Phys Rev B 73, 205119 (2006) Section V.A

Input: 03-sodium_chain.01-ground_state.inp

match ; Space group        ; GREPFIELD(out, 'Space group', 4) ; 123; 0.0001
match ; No. of symmetries  ; GREPFIELD(out, 'symmetries that can be used', 5)  ;  16; 0.0001

match ; Total energy       ; GREPFIELD(static/info, 'Total       =', 3) ; 0.40970595; 0.0001
match ; Ion-ion energy     ; GREPFIELD(static/info, 'Ion-ion     =', 3) ; -1.61084420; 0.0001
match ; Eigenvalues sum    ; GREPFIELD(static/info, 'Eigenvalues =', 3) ; -3.45704568; 0.0001
match ; Hartree energy     ; GREPFIELD(static/info, 'Hartree     =', 3) ; -4.55104824; 0.0001
match ; Exchange energy    ; GREPFIELD(static/info, 'Exchange    =', 3) ; -2.35943900; 0.0001
match ; Correlation energy ; GREPFIELD(static/info, 'Correlation =', 3) ; -0.73526315; 0.0001
match ; Kinetic energy     ; GREPFIELD(static/info, 'Kinetic     =', 3) ; 1.63722611; 0.0001
match ; External energy    ; GREPFIELD(static/info, 'External    =', 3) ; 8.02907381; 0.0001

Input: 03-sodium_chain.02-unocc.inp

match ; Bands n=1,k=1; GREPFIELD(static/eigenvalues, '#k =   1', 3, 1) ; -3.648665; 0.0001
match ; Bands n=1,k=2; GREPFIELD(static/eigenvalues, '#k =   2', 3, 1) ; -3.552680; 0.0001
match ; Bands n=1,k=3; GREPFIELD(static/eigenvalues, '#k =   3', 3, 1) ; -3.265611; 0.0001
match ; Bands n=1,k=4; GREPFIELD(static/eigenvalues, '#k =   4', 3, 1) ; -2.790168; 0.0001
match ; Bands n=1,k=5; GREPFIELD(static/eigenvalues, '#k =   5', 3, 1) ; -2.131471; 0.0001
match ; Bands n=1,k=6; GREPFIELD(static/eigenvalues, '#k =   6', 3, 1) ; -1.368819; 0.0001

match ; Bands n=2,k=1; GREPFIELD(static/eigenvalues, '#k =   1', 3, 2) ; -1.236858; 0.0001
match ; Bands n=2,k=2; GREPFIELD(static/eigenvalues, '#k =   2', 3, 2) ; -1.145312; 0.0001
match ; Bands n=2,k=3; GREPFIELD(static/eigenvalues, '#k =   3', 3, 2) ; -0.870795; 0.0001
match ; Bands n=2,k=4; GREPFIELD(static/eigenvalues, '#k =   4', 3, 2) ; -0.413928; 0.0001
match ; Bands n=2,k=5; GREPFIELD(static/eigenvalues, '#k =   5', 3, 2) ; -0.281684; 0.0001
match ; Bands n=2,k=6; GREPFIELD(static/eigenvalues, '#k =   6', 3, 2) ; -1.210780; 0.0001


