# -*- coding: utf-8 mode: shell-script -*-
# $Id$

Test       : ETSF_IO
Options    : etsf_io
Program    : octopus
TestGroups : long-run, periodic_systems
Enabled    : Yes

Input      : 09-etsf_io.01-gs.inp

match ; Total k-points   ; GREPFIELD(static/info, 'Total number of k-points', 6) ; 2; 0.0001

match ; Total energy       ; GREPFIELD(static/info, 'Total       =', 3) ; -31.42700114; 0.0001
match ; Ion-ion energy     ; GREPFIELD(static/info, 'Ion-ion     =', 3) ; -31.43120280; 0.0001
match ; Eigenvalues sum    ; GREPFIELD(static/info, 'Eigenvalues =', 3) ; -0.47845966; 0.0001
match ; Hartree energy     ; GREPFIELD(static/info, 'Hartree     =', 3) ; 2.48288919; 0.0001
match ; Exchange energy    ; GREPFIELD(static/info, 'Exchange    =', 3) ; -8.24466526; 0.0001
match ; Correlation energy ; GREPFIELD(static/info, 'Correlation =', 3) ; -1.50771570; 0.0001
match ; Kinetic energy     ; GREPFIELD(static/info, 'Kinetic     =', 3) ; 13.22649026; 0.0001
match ; External energy    ; GREPFIELD(static/info, 'External    =', 3) ; -5.95279501; 0.0001

match ; k-point 1 (x) ; GREPFIELD(static/info, '#k =   1', 7) ; 0.000000; 0.0001
match ; k-point 1 (y) ; GREPFIELD(static/info, '#k =   1', 8) ; 0.000000; 0.0001
match ; k-point 1 (z) ; GREPFIELD(static/info, '#k =   1', 9) ; 0.000000; 0.0001
match ; Eigenvalue  1 ; GREPFIELD(static/info, '#k =   1', 3, 1) ; -0.280475; 0.0001
match ; Eigenvalue  8 ; GREPFIELD(static/info, '#k =   1', 3, 8) ; 0.052868; 0.0001
match ; Eigenvalue 16 ; GREPFIELD(static/info, '#k =   1', 3, 16) ; 0.160610; 0.0001
match ; Eigenvalue 18 ; GREPFIELD(static/info, '#k =   1', 3, 18) ; 0.165239; 0.0001

match ; k-point 2 (x) ; GREPFIELD(static/info, '#k =   2', 7) ; 0.500000; 0.0001
match ; k-point 2 (y) ; GREPFIELD(static/info, '#k =   2', 8) ; 0.500000; 0.0001
match ; k-point 2 (z) ; GREPFIELD(static/info, '#k =   2', 9) ; 0.500000; 0.0001
match ; Eigenvalue  1 ; GREPFIELD(static/info, '#k =   2', 3, 1) ; -0.191935; 0.0001
match ; Eigenvalue  8 ; GREPFIELD(static/info, '#k =   2', 3, 8) ; -0.098940; 0.0001
match ; Eigenvalue 16 ; GREPFIELD(static/info, '#k =   2', 3, 16) ; 0.115142; 0.0001
match ; Eigenvalue 18 ; GREPFIELD(static/info, '#k =   2', 3, 18) ; 0.217481; 0.0001

# ETSF_IO files are binary, so we cannot easily test the contents, but
# at least we can check that this run finished without crashing,
# and test the size. However, these sizes are correct only for ETSF_IO 1.0.3/1.0.4;
# ETSF_IO 1.0.2 will give ones 208 smaller.
# Note that the sizes unfortunately depend on the length of the PACKAGE_STRING for
# the current version of octopus, and must be updated when that changes.

match ; density-etsf.nc  ; SIZE(static/density-etsf.nc)  ;   25776; 0.0001
match ; geometry-etsf.nc ; SIZE(static/geometry-etsf.nc) ;    3708; 0.0001
match ; wfs-etsf.nc      ; SIZE(static/wfs-etsf.nc)      ; 1585316; 0.0001
match ; wfs-pw-etsf.nc   ; SIZE(static/wfs-pw-etsf.nc)   ;  836064; 0.0001

match ; density.ncdf     ; SIZE(static/density.ncdf)        ;   22248; 0.0001
match ; netcdf wfn 3     ; SIZE(static/wf-k001-st0003.ncdf) ;   44320; 0.0001
match ; netcdf wfn 4     ; SIZE(static/wf-k001-st0004.ncdf) ;   44320; 0.0001
