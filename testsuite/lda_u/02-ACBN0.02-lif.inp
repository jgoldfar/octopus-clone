#Lithium Floride (LiF) simple cubi

CalculationMode = gs
PeriodicDimensions = 3
BoxShape = parallelepiped
ExperimentalFeatures = yes

a = 7.578

PseudopotentialSet = hscv_lda

%LatticeParameters
  a | a | a
%

%LatticeVectors
 0.  | 0.5 | 0.5
 0.5 | 0.  | 0.5
 0.5 | 0.5 | 0.0
%

%ReducedCoordinates
 "Li" | 0.0 | 0.0 | 0.0
 "F"  | 1/4 | 1/4 | 1/4
%

Spacing = 0.4

FromScratch = yes
ParStates = no
ParDomains = no
ParKPoints = auto

SpinComponents = polarized
GuessMagnetDensity = paramagnetic

LCAOStart= lcao_states

nk = 2
%KPointsGrid
nk | nk | nk
%
KPointsUseSymmetries = no

ExtraStates = 1

LDA_U = yes
UseACBN0Functional = yes
UseAllAtomicOrbitals = yes
OrbitalsTruncationMethod = full
OrbitalsThreshold_LDAU = 0.05
OutputLDA_U = occupation_matrices + effectiveU
